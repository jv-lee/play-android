<?xml version="1.0" encoding="utf-8"?>
<com.lee.library.widget.ShadowConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/medium_offset"
    app:rippleEnable="true"
    app:shadowColor="@color/colorThemeShadow"
    app:shadowFillColor="@color/colorThemeItem"
    app:shadowRound="@dimen/radius_offset">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_image"
        android:layout_width="86dp"
        android:layout_height="146dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_offset"
        android:layout_marginTop="@dimen/medium_offset"
        android:layout_marginEnd="@dimen/medium_offset"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorThemeAccent"
        android:textSize="@dimen/font_size_medium"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="title" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_offset"
        android:layout_marginEnd="@dimen/medium_offset"
        android:ellipsize="end"
        android:maxLines="5"
        android:textColor="@color/colorThemePrimary"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_goneMarginTop="@dimen/medium_offset"
        tools:text="content" />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_offset"
        android:layout_marginBottom="@dimen/medium_offset"
        android:textColor="@color/colorThemeFocus"
        android:textSize="@dimen/font_size_small_x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_image"
        tools:text="author" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/large_offset"
        android:textColor="@color/colorThemePrimaryDark"
        android:textSize="@dimen/font_size_small_x"
        app:layout_constraintBottom_toBottomOf="@id/tv_author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_author"
        tools:text="昨天" />


</com.lee.library.widget.ShadowConstraintLayout>