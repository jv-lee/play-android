<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_login_title"
        android:textColor="@color/colorThemeAccent"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/input_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.lee.library.widget.ShadowConstraintLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/large_offset"
        android:orientation="vertical"
        android:paddingStart="@dimen/large_offset"
        android:paddingEnd="@dimen/large_offset"
        app:layout_constraintBottom_toTopOf="@id/tv_register"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:shadowColor="@color/colorThemeShadow"
        app:shadowFillColor="@color/colorThemeItem"
        app:shadowRound="26dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_username"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/vector_username"
            android:drawablePadding="@dimen/small_offset"
            android:hint="@string/account_username_text"
            android:inputType="textVisiblePassword"
            android:maxLines="1"
            app:layout_constraintBottom_toTopOf="@id/view_line"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorThemeBackground"
            app:layout_constraintBottom_toTopOf="@id/edit_password"
            app:layout_constraintTop_toBottomOf="@id/edit_username" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/vector_password"
            android:drawablePadding="@dimen/small_offset"
            android:hint="@string/account_password_text"
            android:inputType="textPassword"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_line" />

    </com.lee.library.widget.ShadowConstraintLayout>

    <com.lee.library.widget.SelectorTextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_offset"
        android:layout_marginTop="@dimen/large_offset"
        android:text="@string/account_go_to_register_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/input_layout"
        app:layout_constraintTop_toBottomOf="@id/input_layout"
        app:normalTextColor="@color/colorThemeFocus"
        app:pressedTextColor="@color/colorThemeAccent" />

    <com.lee.library.widget.SelectorTextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/large_offset"
        android:maxLines="1"
        android:paddingStart="@dimen/large_offset"
        android:paddingTop="@dimen/medium_offset"
        android:paddingEnd="@dimen/large_offset"
        android:paddingBottom="@dimen/medium_offset"
        android:text="@string/account_login_button"
        app:buttonDisable="true"
        app:buttonRadius="@dimen/radius_offset"
        app:disableBackgroundColor="@color/colorThemeLock"
        app:disableTextColor="@color/colorThemeLockDark"
        app:layout_constraintBottom_toBottomOf="@id/tv_register"
        app:layout_constraintEnd_toEndOf="@id/input_layout"
        app:layout_constraintTop_toTopOf="@id/tv_register"
        app:normalBackgroundColor="@color/colorThemeFocus"
        app:normalTextColor="@android:color/white"
        app:pressedBackgroundColor="@color/colorThemeFocusLight"
        app:pressedTextColor="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
